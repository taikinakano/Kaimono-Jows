<div class="bglayout py-5">
<div class="container">
<div class="left-button">
  <%= link_to "ユーザー一覧に戻る", users_path,class:"btn-float-border-unwithdrow my-4" %>
</div>
<h4 class="rooms-title">気になる同士</h4>
<% @entries.each do |e| %>
  <div class="user-name">
  <strong>
    <%= image_tag attachment_url(e.user, :image, :fill, 100, 100, fallback: "no_image.jpg"), size:'100x100', class:"rounded-circle" %>
      <a class="rooms-user-link" href="/users/<%= e.user.id %>">
        <%= e.user.name %>さん
      </a>
  </strong>
  </div>
<% end %>
<hr>
<div class="chats">
  <div class="chat">
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <div class="chat-box d-flex wrap">
          <div class="chat-face">
            <%= image_tag attachment_url(m.user, :image, :fill, 100, 100, fallback: "no_image.jpg"), size:'100x100', class:"rounded-circle" %>
          </div>
          <div class="pt-3 pl-3">
          <div class="chat-hukidashi"> <strong><%= m.message %></strong> <br>
            <%= m.created_at.to_s(:datetime_jp) %>
          </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="posts">
    <%= form_for @message do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>
</div>
</div>
