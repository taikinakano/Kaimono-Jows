<button type="button" class="btn-float-border-new text-center" data-toggle="modal" data-target="#methodModalbo">
 Method
</button>

<!-- Modal -->
<div class="modal fade" id="methodModalbo" tabindex="-1" role="dialog" aria-labelledby="methodModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="methodModalLabel"><span class="far fa-bookmark mr-2"></span>作り方</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="mt-3" style="line-height: 2rem;">
        <%= simple_format(@cook.cook_method) %>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>