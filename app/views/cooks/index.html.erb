<div class="container">
  <div class="mt-4 d-flex wrap">
  <div>
    <div>
    <h4>利用者名</h4>
    <%= attachment_image_tag @user, :image, :fill, size: '100x100', format: 'jpeg', fallback: "no_image.jpeg" %>
    <%= @user.name %>
    <%= @user.introduction %>
    <%= link_to "編集", edit_user_path(@user) %>
    </div>
    <%= render "cooks/user_cook_info", user: @user %>
    <div>
      <h4>料理登録</h4>
      <%= form_with model: @cook, local:true do |f| %>
      <table class="table table-borderless">
       <tr><th>店舗画像</th><th><%= f.attachment_field :image, placeholder: "ファイルを選択" %></th></tr>
       <tr><th>料理名</th><th><%= f.text_field :cook_name %></th></tr>
       <tr><th>材料</th><td><%= f.text_area :cook_material, size: "30x5" %></td></tr>
       <tr><th>作り方</th><td><%= f.text_area :cook_method, size: "30x5"  %></td></tr>
       <tr><th></th><td><%= "スペースを入力することで複数のタグを付けることができます。" %></td></tr>
       <tr><th></th><td><%= "例：音楽 文芸 スポーツ" %></td></tr>
       <tr><th></th><td><%= f.text_field :tag_name %></td></tr>
       <tr><td><%= f.submit "新規登録" %></td></tr>
     </table>
     <% end %>
    </div>
  </div>

  <div>
<h3> タグリスト</h3>
<% @tag_list.each do |list| %>
  <span>
    <%= link_to list.tag_name, tag_cooks_path(tag_id: list.id) %>
    <%= "(#{list.cooks.count})" %>
  </span>
<% end %>
  </span>
    <h4>登録されている料理</h4>
     <table class="table">
      <thead class="thead-dark">
      <tr>
      <th>料理画像</th>
      <th>料理名</th>
      </tr>
     </thead>
     <tbody>
       <% @cooks.each do |cooks| %>
       <tr>
         <td>
         <%= link_to cook_path(cooks.id) do %>
         <%= attachment_image_tag cooks, :image, size: '200x150', formate: 'jpeg', fallback: "no_iamge.jpeg" %>
         <% end %>
         </td>
         <td>
           <%= link_to cook_path(cooks.id) do %>
           <%= cooks.cook_name %>
           <% end %>
          </td>
       </tr>
       <% end %>
       <%= paginate @cooks %>
     </tbody>
    </table>
  </div>
  </div>
</div>