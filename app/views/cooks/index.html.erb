<div class="container">
  <div class="mt-4 d-flex wrap">
  <div>
    <div>
    <h4>利用者名</h4>
    <%= attachment_image_tag @user, :image, :fill, size: '100x100', format: 'jpeg', fallback: "no_image.jpeg" %>
    <%= @user.name %>
    <%= @user.introduction %>
    <%= link_to "編集", edit_user_path(@user) %>
    </div>
    <div>
      <h4>料理登録</h4>
      <table class="table table-borderless">
        <%= form_with model: @cook, local:true do |f| %>
       <tr><th>店舗画像</th><th><%= f.attachment_field :image, placeholder: "ファイルを選択" %></th></tr>
       <tr><th>料理名</th><th><%= f.text_field :cook_name %></th></tr>
       <tr><td>材料</td><td><%= f.text_area :cook_material, size: "30x5" %></td></tr>
       <tr><td>作り方</td><td><%= f.text_area :cook_method, size: "30x5"  %></td></tr>
       <tr><td><%= f.submit "新規登録" %></td></tr>
       <% end %>
     </table>
    </div>
  </div>

  <div>
    <h4>登録されている料理</h4>
     <table class="table">
      <thead class="thead-dark">
      <tr>
      <th>料理画像</th>
      <th>料理名</th>
      </tr>
     </thead>
     <tbody>
       <% @cooks.each do |cooks| %>
       <tr>
         <td>
         <%= link_to cook_path(cooks.id) do %>
         <%= attachment_image_tag cooks, :image, size: '200x150', formate: 'jpeg', fallback: "no_iamge.jpeg" %>
         <% end %>
         </td>
         <td>
           <%= link_to cook_path(cooks.id) do %>
           <%= cooks.cook_name %>
           <% end %>
          </td>
       </tr>
       <% end %>
       <%= paginate @cooks %>
     </tbody>
    </table>
  </div>
  </div>
</div>