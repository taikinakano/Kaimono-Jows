   <div class="mb-4 ml-3">
    <div class="d-flex flex-wrap">
        <div>
        <%= link_to user_path(user) do %>
         <%= image_tag attachment_url(user, :image, fallback: "no_image.jpg"), size:'200x200', class:"rounded-circle" %>
        <% end %>
        </div>
        <div class="ml-4">
             <div>利用者名：<%= user.name %></div>
             <div class="my-3">紹介文：<%= user.introduction %></div>
             <div class="my-3">フォロー：<%= link_to user.followings.count, user_followings_path(user) %></div>
             <div class="my-3">フォロワー：<%= link_to user.followers.count, user_followers_path(user) %></div>
           <div>
             <%= render "users/info", user: user %>
             <%= render "users/entry", user: user %>
             <% if user != current_user %>
             <% end %>
             <div class="mt-3">
             <% if user == current_user %>
             <%= link_to "編集", edit_user_path(current_user), class: "fas fa-edit mr-3" %>
             <%= link_to "ブックマーク一覧", homs_mypage_path, class: "far fa-bookmark" %>
             <% end %>
             </div>
           </div>
        </div>
     </div>
    </div> <!-- ユーザーdiv -->
