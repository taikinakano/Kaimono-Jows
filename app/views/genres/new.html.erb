<div class="bglayout py-5">
<div class="container mb-5">
<h4 class="my-4">商品ジャンル登録</h4>
  <%= form_with model: [@shop, @genre], local:true do |f| %>
<div class="w-90">
<table class="ml-auto">
<tr>
<th><td>商品ジャンル</td></th>
<th><td><%= f.text_field :name %></td></th>
</tr>
</table>
<div class= "text-right"><%= f.submit "新規登録", class: "btn-float-border-new mt-3" %></div>
<div class="text-right"><%= link_to "戻る", shop_products_path(@shop.id), class: "fas fa-undo my-3" %></div>
</div>
<% end %>
  <table class="table">
  <thead class="thead-dark">
    <tr>
    <th>ジャンル名</th>
    <th></th>
    <th></th>
    </tr>
  </thead>
  <tbody class="bg-light">
    <% @genres.each do |genres| %>
    <tr>
      <td><%= genres.name %></td>
      <td><%= link_to "編集", edit_shop_genre_path(@shop, genres), class: "fas fa-edit" %></td>
      <td><%= link_to "削除", shop_genre_path(@shop, genres), method: :delete, class: "fas fa-trash-alt" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>