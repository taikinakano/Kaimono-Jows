<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="loginbody">
<div class="body"></div>
    <div class="grad"></div>
    <div class="header">
      <div><span>LOG IN</span></div>
    </div>
    <br>
    <div class="login">
     <%= f.text_field :name, placeholder: "name", autofocus: true, autocomplete: "name", class: "devisefield" %>
     <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email", class: "devisefield"  %>
     <%= f.password_field :password, placeholder: "password", autocomplete: "current-password", class: "devisefield" %>
     <%= f.submit "Log in", class: "submit mb-3" %>
     <h5><%= link_to "TOP", root_path, class: "DeviseTop" %></h5>
     <div><h5><%= render "devise/shared/links", class: "DeviseTop" %></h5></div>
    </div>
</div>
<% end %>

