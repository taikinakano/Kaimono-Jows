<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="loginbody">
<div class="body"></div>
<%= render "devise/shared/error_messages", resource: resource %>
    <div class="grad"></div>
    <div class="header">
      <div><span>SIGN UP</span></div>
    </div>
    <br>
    <div class="login">
     <%= f.text_field :name, placeholder: "name", autofocus: true, autocomplete: "name", class: "devisefield" %>
     <%= f.email_field :email, placeholder: "email", autofocus: true, autocomplete: "email", class: "devisefield"  %>
     <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
     <%= f.password_field :password, placeholder: "password", autocomplete: "new-password", class: "devisefield" %>
     <%= f.password_field :password_confirmation, placeholder: "password", autocomplete: "new-password", class: "devisefield" %>
     <%= f.submit "Sign Up", class: "submit mb-3" %>
     <h5><%= link_to "TOP", root_path, class: "DeviseTop" %></h5>
     <div><h5><%= render "devise/shared/links", class: "DeviseTop" %></h5></div>
    </div>
</div>
<% end %>
