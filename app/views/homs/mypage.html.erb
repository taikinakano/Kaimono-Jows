<div class="bglayout py-5">
<div class="container">
<h4 class="mb-4">ブックマーク一覧</h4>

    <% @bookmarks.each do |bookmark| %>
      <div class="d-flex flex-wrap mx-3">
        <div class="mb-3"><%= attachment_image_tag bookmark.shop, :image, size: '200x150', formate: 'jpg', fallback: "no_iamge.jpg" %></div>
        <div class="d-flex flex-wrap">
        <div class="pt-4 ml-3">
          <%= link_to shop_path(bookmark.shop) do %>
            <%= bookmark.shop.shop_name %>
          <% end %>
        </div>
        <div class="pt-4 mx-3"><%= bookmark.shop.comment %></div>
        <div class="pt-4"><%= bookmark.shop.user.name %></div>
        </div>
      </div>
    <% end %>
  </tbody>
</table>
</div>
</div>
