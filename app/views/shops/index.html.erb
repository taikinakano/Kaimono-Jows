    <div class="container">
    <div class="mt-4">
    <h4 class="mb-3">店舗一覧</h4>
     <table class="table">
      <thead class="thead-dark">
      <tr>
      <th>店舗画像</th>
      <th>店舗名</th>
      <th>住所</th>
      </tr>
     </thead>
     <tbody>
       <% @shops.each do |shops| %>
       <tr>
         <td>
         <%= link_to user_path(shops.id) do %>
         <%= attachment_image_tag shops, :image, size: '200x150', formate: 'jpeg', fallback: "no_iamge.jpeg" %>
         <% end %>
         </td>
         <td>
           <%= link_to user_path(shops.id) do %>
           <%= shops.shop_name %>
           <% end %>
          </td>
          <td><%= shops.address %></td>
       </tr>
       <% end %>
       <%= paginate @shops %>
     </tbody>
    </table>
    </div>
    </div>