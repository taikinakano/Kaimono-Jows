<div class="container">
<h4 class="my-4">店舗名：<%= @shop.shop_name %></h4>
  <div>商品一覧</div>
  <%= link_to '新規投稿', new_shop_product_path(@shop) %>
  <%= link_to "ジャンル登録", new_shop_genre_path(@shop) %>
  <table class="table">
  <thead class="thead-dark">
    <tr>
    <th>商品名</th>
    <th>値段</th>
    <th>登録日</th>
    <th></th>
    <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |products| %>
    <tr>
      <td>
        <%= link_to shop_product_path(@shop, products) do %>
        <%= products.product_name %>
        <% end %>
      </td>
      <td><%= products.price %></td>
      <td><%= products.created_at %></td>
      <% end %>
    </tr>
    <%= paginate @products %>
  </tbody>
</table>
</div>
</div>