<h4>店舗編集</h4>
<table class="table table-borderless">
  <%= form_with model: [@shop, @product], local:true do |f| %>
  <tr><th>商品画像</th><td><%= f.attachment_field :image, placeholder: "ファイルを選択" %></td></tr>
  <tr><th>商品名</th><td><%= f.text_field :product_name %></td></tr>
  <tr><th>商品メモ</th><td><%= f.text_field :product_memo %></td></tr>
  <tr><th>商品ジャンル</th><td><%= f.collection_select :genre_id, @shop.genres.all, :id, :name, { include_blank: "--選択してください--　" } %></td></tr>
  <tr><th>価格</th><td><%= f.text_field :price %></td></tr>
  <tr><th></th><td><%= f.submit "更新" %></td></tr>
  <% end %>
</table>
