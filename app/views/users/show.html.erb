<div class="bglayout">
 <div class="container" style="width:100%;">
  <div class="mx-auto">
  <%= render "users/user-info", user: @user %>
  </div>
  <div class="d-flex flex-wrap row row-cols-lg-2">
   <div class="col">
    <%= render "shops/shop-new", shop: @shop %>
   </div>
    <div class="mt-3 col">
    <div class="text-right">
      <%= form_with url: search_shops_path(@user), method: :get, local: true do |f| %>
        <%= f.text_field :content %>
        <%= f.select :model , options_for_select({ "店舗名" => "shop_name", "住所" => "address" }) %>
        <button type="submit" class="btn-float-border-search">
          <i class="fas fa-search"></i> 検索
        </button>
      <% end %>
    </div>
    <div class="ml-5"><%= render "shops/my-shop", shops: @shops %></div>
    </div>
  </div>
 </div>
</div>

